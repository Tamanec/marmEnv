    daily
    rotate 14
    olddir /var/log/marm/nadzor/cron/archive
    dateext
    compress
    notifempty
    missingok
    copytruncate
}

/var/log/marm/nadzor/service/*.log {
    daily
    rotate 14
    olddir /var/log/marm/nadzor/service/archive
    dateext
    compress
    notifempty
    missingok
    copytruncate
}

